---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Product Features">
  <section class="p-6">
    <h1 class="text-4xl font-bold mb-4">Product Features</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="p-4 border rounded shadow">
        <h2 class="text-xl font-semibold">Electronic Health Records</h2>
        <p>Store and retrieve patient records easily and securely.</p>
      </div>
      <div class="p-4 border rounded shadow">
        <h2 class="text-xl font-semibold">Telehealth Integration</h2>
        <p>Connect remote areas with quality healthcare services.</p>
      </div>
    </div>
  </section>
</Layout>
